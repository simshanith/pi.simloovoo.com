extends ~markup/templates/base.pug

block setup
  - htmlAttributes = {class: 'wf-loading'}
  - helpers = require('markup/helpers')
  - renderApp = helpers.renderApp

append head
  meta(property='og:image', content=`http://pi.simloovoo.com${require('assets/images/splash.jpg')}`)
  script(src="https://use.typekit.net/etb5gcw.js")
  script.
    try{Typekit.load({ async: false });}catch(e){}

block body
  #app
    != helpers.renderApp(htmlWebpackPlugin.options)
    