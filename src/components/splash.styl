mainColor = #ddd
accentColor = darken(mainColor, 40%)

.main
  background-image url('assets/images/splash.jpg')
  background-size cover
  background-repeat no-repeat
  background-position center
  padding 75vh 0 10vh
  text-align center
  color mainColor
  
  line-height 1.5
  font-size 1.5em

  a
    color accentColor
    text-decoration none
    &:hover, &:focus
      text-decoration underline
  
  h1
    font-size 10vw
    margin-top 0
    transition color .75s ease-in-out
    :global
      .wf-loading &
        transition none
  h2
    font-size 4vw
    font-style italic

.credit
  font-size .75em
  p
    display inline
